<PowerSelect 
  @options={{options}} 
  @selected={{selected}} 
  @searchField="name" 
  @placeholder={{placeholder}} 
  @onChange={{onchange}} 
  @matcher={{matcher}} 
  @onInput={{action 'handleSearch'}} as |district|>
  <strong class="district">{{district.boro}} {{district.cd}}</strong> <small class="neighborhoods">{{district.neighborhoods}}</small>
</PowerSelect>
