<ul class="no-bullet">
  {{#each (await studies) as |study|}}
    <li class="list-item-padded">
      <a href = "{{study.url}}"><FaIcon @icon="external-link-alt" />&nbsp;<strong>{{study.name}}</strong></a>
    </li>
  {{else}}
    <li class="list-item-padded">
      <p class="text-center" style="padding: 60px 0;">No recent or ongoing studies.</p>
    </li>
  {{/each}}
</ul>
