      <section id="actions" class="page-section">
        <h3 class="section-header">
          {{#scroll-to offset=-210 href='#actions' afterScroll='handleAfterScroll'}}
            Actions {{fa-icon "link"}}
          {{/scroll-to}}
        </h3>

        <div class="grid-x grid-padding-x">
          <div class="cell medium-6">

            <h4 class="subsection-header"><strong>LUCATS Applications</strong></h4>
