        <h4 class="subsection-header"><strong>[Policy Area]</strong></h4>
        <div class="callout">
        </div>

        <h4 class="subsection-header"><strong>[Policy Area]</strong></h4>
        <div class="callout">
        </div>

      </section>

      <section id="built-environment" class="page-section">
        <h3 class="section-header">
          {{#scroll-to offset=-210 href='#built-environment' afterScroll='handleAfterScroll'}}
            Built Environment {{fa-icon "link"}}
          {{/scroll-to}}
        </h3>

        <h4 class="subsection-header"><strong>Land Use</strong></h4>
        <div class="callout">
          <div class="grid-x grid-padding-x">
            <div class="cell medium-6">
              {{land-use-map}}
            </div>
            <div class="cell medium-6">
              {{land-use-chart borocd=model.borocd}}
